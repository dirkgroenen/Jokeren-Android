<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#00a317"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <!-- VIEW FOR PLAYER NAMES (Player 1, Player 2, Player 3) -->

            <LinearLayout
                android:id="@+id/lltopplayers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#333"
                android:orientation="vertical"
                android:padding="4dp" >

                <TextView
                    android:id="@+id/tvOpp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/opp1"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCardDeck"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="vertical"
                android:padding="4dp" >

                <ImageView
                    android:id="@+id/ivDeckOpen"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/d2"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/ivDeck"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:src="@drawable/deckred" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <!-- VIEW FOR CARDS WHICH BELONG TO PLAYERS ABOVE -->

            <LinearLayout
                android:id="@+id/lltopcards"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:baselineAligned="false"
                android:visibility="gone" >

                <LinearLayout
                    android:id="@+id/llCardsOpp1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:weightSum="7" >

                    <ImageView
                        android:id="@+id/ivcard1_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/bred" />

                    <ImageView
                        android:id="@+id/ivcard1_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-25dp"
                        android:layout_weight="1"
                        android:src="@drawable/bred" />

                    <ImageView
                        android:id="@+id/ivcard1_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-25dp"
                        android:layout_weight="1"
                        android:src="@drawable/bred" />

                    <ImageView
                        android:id="@+id/ivcard1_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-25dp"
                        android:layout_weight="1"
                        android:src="@drawable/bred" />

                    <ImageView
                        android:id="@+id/ivcard1_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-25dp"
                        android:layout_weight="1"
                        android:src="@drawable/bred" />

                    <ImageView
                        android:id="@+id/ivcard1_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-25dp"
                        android:layout_weight="1"
                        android:src="@drawable/bred" />

                    <ImageView
                        android:id="@+id/ivcard1_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-25dp"
                        android:layout_weight="1"
                        android:src="@drawable/bred" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCardsOpp2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:weightSum="7" >

                    <ImageView
                        android:id="@+id/ivcard2_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-25dp"
                        android:layout_weight="1"
                        android:src="@drawable/bred" />

                    <ImageView
                        android:id="@+id/ivcard2_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-25dp"
                        android:layout_weight="1"
                        android:src="@drawable/bred" />

                    <ImageView
                        android:id="@+id/ivcard2_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-25dp"
                        android:layout_weight="1"
                        android:src="@drawable/bred" />

                    <ImageView
                        android:id="@+id/ivcard2_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-25dp"
                        android:layout_weight="1"
                        android:src="@drawable/bred" />

                    <ImageView
                        android:id="@+id/ivcard2_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-25dp"
                        android:layout_weight="1"
                        android:src="@drawable/bred" />

                    <ImageView
                        android:id="@+id/ivcard2_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-25dp"
                        android:layout_weight="1"
                        android:src="@drawable/bred" />

                    <ImageView
                        android:id="@+id/ivcard2_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-25dp"
                        android:layout_weight="1"
                        android:src="@drawable/bred" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCardsOpp3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:weightSum="7" >

                    <ImageView
                        android:id="@+id/ivcard3_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/bred" />

                    <ImageView
                        android:id="@+id/ivcard3_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-25dp"
                        android:layout_weight="1"
                        android:src="@drawable/bred" />

                    <ImageView
                        android:id="@+id/ivcard3_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-25dp"
                        android:layout_weight="1"
                        android:src="@drawable/bred" />

                    <ImageView
                        android:id="@+id/ivcard3_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-25dp"
                        android:layout_weight="1"
                        android:src="@drawable/bred" />

                    <ImageView
                        android:id="@+id/ivcard3_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-25dp"
                        android:layout_weight="1"
                        android:src="@drawable/bred" />

                    <ImageView
                        android:id="@+id/ivcard3_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-25dp"
                        android:layout_weight="1"
                        android:src="@drawable/bred" />

                    <ImageView
                        android:id="@+id/ivcard3_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-25dp"
                        android:layout_weight="1"
                        android:src="@drawable/bred" />
                </LinearLayout>
            </LinearLayout>

            <!-- VIEW FOR PLAYED SETS -->


            <!-- LAYOUT VIEW FOR PLAYER'S CARDS -->

            <LinearLayout
                android:id="@+id/llbottomcards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:paddingBottom="2dp" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llplayground"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/llplaygroundRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llplaygroundRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal" >
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true">
         <ProgressBar
             android:id="@+id/pbPoints"
             style="?android:attr/progressBarStyleHorizontal"
             android:visibility="invisible"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_alignParentTop="true" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llCardDeck"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:weightSum="14" >

        <ImageView
            android:id="@+id/ivcard0_1"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:src="@drawable/bred" />

        <ImageView
            android:id="@+id/ivcard0_2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="-25dp"
            android:layout_weight="1"
            android:src="@drawable/bred" />

        <ImageView
